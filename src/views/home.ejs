<%- contentFor('body') %>
<div class="container">
    <div class="jumbotron text-center bg-light p-5 rounded-3 mb-4">
        <h1 class="display-4">Welcome to Computer Store</h1>
        <p class="lead">Find the best computer components for your needs</p>
        <hr class="my-4">
        <p>Browse our categories below or use the navigation menu to find specific products.</p>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-desktop fa-3x mb-3"></i>
                    <h5 class="card-title">PCs & Laptops</h5>
                    <p class="card-text">Complete systems for work, gaming, and everything in between.</p>
                    <div class="mt-3">
                        <a href="/products/category/pc" class="btn btn-outline-primary me-2">Browse PCs</a>
                        <a href="/products/category/laptop" class="btn btn-outline-primary">Browse Laptops</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-microchip fa-3x mb-3"></i>
                    <h5 class="card-title">Components</h5>
                    <p class="card-text">Essential parts to build or upgrade your system.</p>
                    <div class="mt-3">
                        <a href="/products/category/cpu" class="btn btn-outline-primary me-2">CPUs</a>
                        <a href="/products/category/graphicsCard" class="btn btn-outline-primary">GPUs</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-keyboard fa-3x mb-3"></i>
                    <h5 class="card-title">Peripherals</h5>
                    <p class="card-text">Monitors, keyboards, mice, and other accessories.</p>
                    <div class="mt-3">
                        <a href="/products/category/monitor" class="btn btn-outline-primary me-2">Monitors</a>
                        <a href="/products/category/gears" class="btn btn-outline-primary">Gears</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 